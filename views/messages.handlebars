<div id="messages" class="container messages">
</div>

<script id="messageTemplate" type="text/x-handlebars-template">
\{{#each this}}
<div class="panel panel-default message-container">
<div class="panel-body message-content">
<div>\{{message}} - \{{name}}.</div> <div><strong>Sentiment:</strong> \{{emoji}}</div>
</div>
<button id="\{{ messageId }}" class="btn btn-default like-button">Has this task been completed?</button>
</div>
\{{/each}}
</script>

<h1> To Do List</h1>
<div class ="container">
  <input id="inputField" type="text"><button id="addToDo">+</button>
  <div class="to-do" id="toDoContainer"></div>
<div class="formContainer">
    <form autocomplete="off" class="form-horizontal messageContainer" role="form"
            action="/message" method="POST">
        <div class="form-group">
            <label for="fieldName" class="col-sm-2 control-label">When is it due?</label>
            <div class="col-sm-4">
                <input type="text" class="form-control"
                id="fieldName" name="name">
            </div>
        </div>
        <div class="form-group">
            <label for="fieldEmail" class="col-sm-2 control-label">Task</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" required
                    id="fieldMessage" name="message">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <button type="submit" class="btn btn-default">Note it</button>
            </div>
        </div>
    </form>
</div>
<script src="/js/getMessages.js"></script>
<script src="/js/ajax-submit.js">
</script>
